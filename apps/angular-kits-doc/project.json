{
  "name": "@coco-kits/angular-kits-doc",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/angular-kits-doc/src",
  "tags": ["type:app", "framework:angular"],
  "targets": {
    "storybook": {
      "options": {
        "docs": true,
        "styles": ["packages/internal/storybook-theme-switcher/src/lib/styles/themes.scss"],
        "compodoc": true,
        "compodocArgs": [
          "-e",
          "json",
          "-d",
          "dist/compodoc/angular-kits-doc",
          "--disableLifeCycleHooks",
          "--disableProtected",
          "--disablePrivate",
          "--disableInternal"
        ]
      }
    },
    "build-storybook": {
      "options": {
        "docs": true,
        "styles": ["packages/internal/storybook-theme-switcher/src/lib/styles/themes.scss"],
        "compodoc": true,
        "compodocArgs": [
          "-e",
          "json",
          "-d",
          "dist/compodoc/angular-kits-doc",
          "--disableLifeCycleHooks",
          "--disableProtected",
          "--disablePrivate",
          "--disableInternal"
        ]
      }
    },
    "eslint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
