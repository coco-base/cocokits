{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "typeRoots": ["node_modules/@types", "./@types"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@cocokits/angular-button": ["packages/angular/button/src/index.ts"],
      "@cocokits/angular-cdk": ["packages/angular/cdk/src/index.ts"],
      "@cocokits/angular-checkbox": ["packages/angular/checkbox/src/index.ts"],
      "@cocokits/angular-components": ["packages/angular/components/src/index.ts"],
      "@cocokits/angular-core": ["packages/angular/core/src/index.ts"],
      "@cocokits/angular-divider": ["packages/angular/divider/src/index.ts"],
      "@cocokits/angular-form-field": ["packages/angular/form-field/src/index.ts"],
      "@cocokits/angular-highlight": ["packages/angular/highlight/src/index.ts"],
      "@cocokits/angular-icon": ["packages/angular/icon/src/index.ts"],
      "@cocokits/angular-menu": ["packages/angular/menu/src/index.ts"],
      "@cocokits/angular-overlay": ["packages/angular/overlay/src/index.ts"],
      "@cocokits/angular-radio": ["packages/angular/radio/src/index.ts"],
      "@cocokits/angular-utils": ["packages/angular/utils/src/index.ts"],
      "@cocokits/common-utils": ["packages/common/utils/src/index.ts"],
      "@cocokits/core": ["packages/common/core/src/index.ts"],
      "@cocokits/react-overlay": ["packages/react/overlay/src/index.ts"],
      "@cocokits/storybook-doc-page": ["packages/internal/storybook-doc-page/src/index.ts"],
      "@cocokits/storybook-theme-switcher": ["packages/internal/storybook-theme-switcher/src/index.ts"],
      "@cocokits/theme-default": ["packages/themes/default/src/index.ts"],
      "@cocokits/theme-frame-x": ["packages/themes/frame-x/src/index.ts"],
      "@cocokits/workspace-plugin": ["tools/workspace-plugin/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
