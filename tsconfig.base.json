{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "typeRoots": ["node_modules/@types", "./@types"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@coco-kits/angular-components": ["packages/angular/components/src/index.ts"],
      "@coco-kits/angular-highlight": ["packages/angular/highlight/src/index.ts"],
      "@coco-kits/angular-icon": ["packages/angular/icon/src/index.ts"],
      "@coco-kits/common-angular-utils": ["packages/common/angular-utils/src/index.ts"],
      "@coco-kits/common-utils": ["packages/common/utils/src/index.ts"],
      "@coco-kits/common-types": ["packages/common/types/src/index.ts"],
      "@coco-kits/storybook-theme-switcher": ["packages/internal/storybook-theme-switcher/src/index.ts"],
      "@coco-kits/storybook-doc-page": ["packages/internal/storybook-doc-page/src/index.ts"],
      "@coco-kits/theme-default": ["packages/themes/default/src/index.ts"],
      "@coco-kits/workspace-plugin": ["tools/workspace-plugin/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
