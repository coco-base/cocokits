{
  "$schema": "https://json-schema.org/schema",
  "$id": "UtilLibrary",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "framework": {
      "type": "string",
      "description": "The framework of library",
      "enum": ["angular", "react", "web", "shared"],
      "$default": {
        "$source": "argv",
        "index": 1
      },
      "x-prompt": "Select the framework of library"
    },
    "directory": {
      "type": "string",
      "description": "The directory of library",
      "x-prompt": "what is the directory of library"
    },
    "storybook": {
      "type": "boolean",
      "description": "Whether generate storybook for library or not",
      "x-prompt": "Is the library has storybook?",
      "default": true
    }
  },
  "required": ["name", "framework", "directory"]
}
