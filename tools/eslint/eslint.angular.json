{
  "overrides": [
    {
      "files": ["*.ts"],
      "plugins": ["@angular-eslint"],
      "extends": ["./eslint.base.json"],
      "rules": {
        "@angular-eslint/no-host-metadata-property": "off",
        "@angular-eslint/directive-selector": [
          "error",
          {
            "type": ["attribute", "element"],
            "prefix": "cck"
          }
        ],
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            "prefix": "cck",
            "style": "kebab-case"
          }
        ]
      }
    },
    {
      "files": ["**/stories/**/*.ts"],
      "plugins": ["@angular-eslint"],
      "extends": ["./eslint.base.json"],
      "rules": {
        "@angular-eslint/directive-selector": [
          "error",
          {
            "type": ["attribute", "element"],
            "prefix": "story"
          }
        ],
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            "prefix": "story",
            "style": "kebab-case"
          }
        ]
      }
    }
  ]
}
