{
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx", "!**/vite.config.ts"],
      "plugins": ["@typescript-eslint", "simple-import-sort", "import"],
      "rules": {
        "import/no-extraneous-dependencies": [
          "error",
          {
            "includeInternal": true,
            "includeTypes": true,
            "devDependencies": [
              "**/*.stories.*",
              "**/.storybook/**/*.*",
              "**/*.spec.ts",
              "**/*.test.ts",
              "**/vite.config.ts",
              "*/vite.config.ts",
              "vite.config.ts"
            ]
          }
        ],
        "no-constant-condition": "error",
        "no-var": "error",
        "no-empty": ["error", { "allowEmptyCatch": true }],
        "no-self-assign": "error",
        "no-restricted-syntax": "error",
        "@typescript-eslint/member-ordering": ["error", { "default": ["field", "constructor", "method"] }],
        "@typescript-eslint/no-unused-vars": [
          "error",
          {
            "args": "all",
            "argsIgnorePattern": "^_",
            "caughtErrors": "all",
            "caughtErrorsIgnorePattern": "^_",
            "destructuredArrayIgnorePattern": "^_",
            "varsIgnorePattern": "^_",
            "ignoreRestSiblings": true
          }
        ],
        "no-async-promise-executor": "off",
        "@typescript-eslint/no-explicit-any": "off",
        "indent": ["error", 2, { "SwitchCase": 1 }],
        "constructor-super": ["error"],
        "semi": ["error", "always"],
        "camelcase": ["error"],
        "arrow-body-style": ["off"],
        "complexity": ["error", { "max": 15 }],
        "curly": ["error"],
        "default-case-last": ["error"],
        "default-param-last": ["error"],
        "dot-notation": [
          "error",
          {
            "allowPattern": "^docs$"
          }
        ],
        "eqeqeq": ["error"],
        "func-name-matching": ["error"],
        "max-depth": ["error", 4],
        "max-lines": ["error", { "max": 250, "skipBlankLines": true, "skipComments": true }],
        "max-lines-per-function": ["error", { "max": 80, "skipComments": true }],
        "max-nested-callbacks": ["error", 3],
        "max-params": ["error", 4],
        "max-statements": ["error", 24],
        "no-alert": ["error"],
        "no-console": ["error"],
        "no-empty-function": ["error"],
        "no-eval": ["error"],
        "no-extend-native": ["error"],
        "no-floating-decimal": ["error"],
        "no-mixed-operators": ["error"],
        "no-multi-assign": ["error"],
        "no-param-reassign": ["error"],
        "no-script-url": ["error"],
        "no-shadow": "off",
        "@typescript-eslint/no-shadow": ["error"],
        "prefer-const": ["error"],
        "spaced-comment": ["error", "always", { "markers": ["/"] }],
        "no-duplicate-imports": ["error"],
        "simple-import-sort/imports": [
          "error",
          {
            "groups": [["^@angular", "^@react"], ["^@", "^(?!@|\\.)"], ["^@cocokits/*"], ["^\\./", "^\\.\\./"]]
          }
        ]
      }
    },
    {
      "files": ["*.tsx", "*.jsx"],
      "rules": {
        "max-lines-per-function": ["error", { "max": 80, "skipComments": true }]
      }
    },
    {
      "files": ["*.spec.ts", "*.spec.tsx", "*.spec.js", "*.spec.jsx", "*.stories.ts"],
      "env": {
        "jest": true
      },
      "rules": {
        "complexity": "off",
        "dot-notation": "off",
        "max-lines-per-function": ["off"],
        "no-empty-function": ["off"],
        "@typescript-eslint/ban-ts-comment": ["off"],
        "@typescript-eslint/no-empty-function": ["off"],
        "max-nested-callbacks": ["off"],
        "max-lines": ["off"],
        "max-statements": ["off"]
      }
    }
  ]
}
