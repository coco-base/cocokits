{
  "name": "@cocokits/theme-default",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/themes/default/src",
  "projectType": "library",
  "tags": ["type:theme", "framework:shared"],
  "targets": {
    "build": {
      "executor": "@nx/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/themes/default",
        "main": "packages/themes/default/src/index.ts",
        "tsConfig": "packages/themes/default/tsconfig.lib.json",
        "assets": [
          "packages/themes/default/*.md",
          "packages/themes/default/**/*.scss",
          "packages/themes/default/**/*.css"
        ]
      },
      "dependsOn": ["build-css", "^build"]
    },
    "build-css": {
      "executor": "@cocokits/workspace-plugin:scss-builder",
      "outputs": ["{options.outputPath}"],
      "options": {
        "files": [
          {
            "path": "packages/themes/default/src/styles/css/components.scss",
            "output": "packages/themes/default/src/styles/css"
          }
        ]
      }
    },
    "token-generator": {
      "executor": "@cocokits/workspace-plugin:token-generator",
      "outputs": ["{options.outputPath}"],
      "options": {
        "files": ["packages/themes/default/json-token/manifest.json"],
        "excludeCollections": [],
        "parser": "design-tokens-manager",
        "outputDir": "packages/themes/default/src/token",
        "themeName": "default"
      }
    },
    "quick-fix-eslint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
