{
  "name": "@coco-kits/theme-default",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/themes/default/src",
  "projectType": "library",
  "tags": ["type:theme", "framework:shared"],
  "targets": {
    "build": {
      "executor": "@coco-kits/workspace-plugin:scss-builder",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/themes/default",
        "sourceMap": true,
        "css": ["packages/themes/default/src/styles.scss", "packages/themes/default/src/token.scss"],
        "min": ["packages/themes/default/src/styles.scss", "packages/themes/default/src/token.scss"]
      }
    },
    "scssify-token": {
      "executor": "@coco-kits/workspace-plugin:scssify-token",
      "outputs": ["{options.outputPath}"],
      "configurations": {
        "designTokensManager": {
          "files": ["packages/themes/default/json-token/manifest.json"],
          "exclude": [
            "packages/themes/default/json-token/grid.styles.tokens.json",
            "packages/themes/default/json-token/Breakpoints.Desktop.tokens.json",
            "packages/themes/default/json-token/Breakpoints.Tablet.tokens.json",
            "packages/themes/default/json-token/Breakpoints.Mobile.tokens.json"
          ],
          "parser": "design-tokens-manager",
          "skipTokenTypes": ["gradient"],
          "outputDir": "packages/themes/default/src/token",
          "themeName": "default"
        }
      }
    },
    "eslint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
