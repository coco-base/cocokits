{
  "name": "@coco-kits/common-angular-utils",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/common/angular-utils/src",
  "prefix": "cck",
  "projectType": "library",
  "tags": ["type:utils", "framework:angular"],
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "packages/common/angular-utils/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/common/angular-utils/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "packages/common/angular-utils/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
